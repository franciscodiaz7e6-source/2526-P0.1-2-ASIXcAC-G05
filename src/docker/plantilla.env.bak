# ============================================
# CONFIGURACIÓN DEL PROYECTO
# ============================================
# Copia este archivo a .env y asigna valores reales
# cp .env.example .env

# Nombre base para los contenedores (para evitar colisiones)
PROJECT_NAME=my_project

# ============================================
# MYSQL - Base de Datos
# ============================================
# ¡IMPORTANTE! Cambia estas contraseñas en producción
MYSQL_ROOT_PASSWORD=change_me_root_secret
MYSQL_DATABASE=app_database
MYSQL_USER=app_user
MYSQL_PASSWORD=change_me_user_secret

# ============================================
# NGINX - Puerto de Exposición
# ============================================
NGINX_PORT=8080

# ============================================
# PHP - Configuración de Rendimiento
# ============================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_UPLOAD_SIZE=100M
PHP_MAX_EXECUTION_TIME=30

# ============================================
# Credenciales de Aplicación (Deben coincidir con MySQL)
# ============================================
# DB_HOST está definido internamente en docker-compose como 'database'
DB_NAME=app_database
DB_USER=app_user
DB_PASS=change_me_user_secret