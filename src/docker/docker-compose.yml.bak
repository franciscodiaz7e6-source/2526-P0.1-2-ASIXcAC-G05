version: '3.9'

services:
  # ============================================
  # Proxy Inverso y Balanceador de Carga
  # ============================================
  proxy:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    container_name: ${PROJECT_NAME}-proxy
    restart: unless-stopped
    ports:
      - "${NGINX_PORT}:80"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
      - ../src/web/php:/app:ro
    depends_on:
      - app-read-1
      - app-read-2
      - app-write
      - static-uploads
      - static-assets
    networks:
      - frontend_net
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/"]
      interval: 10s
      timeout: 5s
      retries: 3

  # ============================================
  # Aplicación - Instancia 1 (Lectura)
  # ============================================
  app-read-1:
    build:
      context: ./php
      dockerfile: Dockerfile
    container_name: ${PROJECT_NAME}-app-read-1
    restart: unless-stopped
    environment: &app_env
      DB_HOST: database
      DB_NAME: ${DB_NAME}
      DB_USER: ${DB_USER}
      DB_PASS: ${DB_PASS}
      PHP_MEMORY_LIMIT: ${PHP_MEMORY_LIMIT}
      PHP_MAX_UPLOAD_SIZE: ${PHP_MAX_UPLOAD_SIZE}
      PHP_MAX_EXECUTION_TIME: ${PHP_MAX_EXECUTION_TIME}
    volumes:
      - ../src/web/php:/app:ro
    depends_on:
      - database
    networks:
      - frontend_net
      - backend_net

  # ============================================
  # Aplicación - Instancia 2 (Lectura)
  # ============================================
  app-read-2:
    build:
      context: ./php
      dockerfile: Dockerfile
    container_name: ${PROJECT_NAME}-app-read-2
    restart: unless-stopped
    environment: *app_env  # Reutiliza las variables de entorno de arriba
    volumes:
      - ../src/web/php:/app:ro
    depends_on:
      - database
    networks:
      - frontend_net
      - backend_net

  # ============================================
  # Aplicación - Upload (Escritura)
  # ============================================
  app-write:
    build:
      context: ./php
      dockerfile: Dockerfile
    container_name: ${PROJECT_NAME}-app-write
    restart: unless-stopped
    environment: *app_env
    volumes:
      - ../src/web/php:/app:ro
      - uploads_data:/uploads
    depends_on:
      - database
    networks:
      - frontend_net
      - backend_net

  # ============================================
  # Servidor de Imágenes (Uploads)
  # ============================================
  static-uploads:
    image: nginx:alpine
    container_name: ${PROJECT_NAME}-static-uploads
    restart: unless-stopped
    volumes:
      - uploads_data:/usr/share/nginx/html/uploads:ro
    networks:
      - frontend_net

  # ============================================
  # Servidor de Assets Estáticos (CSS/JS)
  # ============================================
  static-assets:
    image: nginx:alpine
    container_name: ${PROJECT_NAME}-static-assets
    restart: unless-stopped
    volumes:
      - ../src/web/static:/usr/share/nginx/html:ro
    networks:
      - frontend_net

  # ============================================
  # Base de Datos
  # ============================================
  database:
    image: mysql:8.0
    container_name: ${PROJECT_NAME}-db
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: ${MYSQL_DATABASE}
      MYSQL_USER: ${MYSQL_USER}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
    volumes:
      - db_data:/var/lib/mysql
      - ../src/database/init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    networks:
      - backend_net
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 3

# ============================================
# VOLUMENES
# ============================================
volumes:
  db_data:
    driver: local
  uploads_data:
    driver: local

# ============================================
# REDES
# ============================================
networks:
  frontend_net:
    driver: bridge
  backend_net:
    driver: bridge